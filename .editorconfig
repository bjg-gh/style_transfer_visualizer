# EditorConfig helps maintain consistent coding styles
# across different editors and IDEs

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 79

# Markdown and reStructuredText
[*.md]
trim_trailing_whitespace = false

# Docstrings (PEP257 recommends wrapping at 72)
# NOTE: There’s no “docstring-only” section in EditorConfig,
# but we enforce this visually in the IDE and via Ruff
